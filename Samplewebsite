pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/user/website.git'
            }
        }
        
        stage('Build Website') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }
        
        stage('Deploy website') {
            steps {
                deploy website to Apache server
            }
        }
    }
}
